<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>09 CRUD</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="w-full h-full bg-gray-900 p-10 text-white">
      <a href="/" class="text-blue-400 text-m tracking-wide">Back to Home</a>

      <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
      <div class="users flex gap-4">
        <% if(users.length>0){%>
          <% users.forEach((user) => { %>
                <div class="user w-72 p-4 rounded-lg bg-gray-800">
          <div class="w-full h-52 bg-gray-500 rounded-lg overflow-hidden">
            <img src="<%= user.image %>" alt="user image" class="w-full h-full object-cover rounded-lg"/>
          </div>
          <h3 class="text-xl tracking-wide mt-3"><%= user.name %></h3>
          <h5 class="text-blue-500"><%= user.email %></h5>
          <div class="flex gap-4 mt-7">
            <a href="/edit/<%= user._id %> " class="text-yellow-800">Edit User</a>
            <a class="text-red-800" href="/delete/<%= user._id %>" 
  onclick="return confirm('Are you sure you want to delete this user?')">Delete User</a>
          </div>
        </div>
        <% }) %>
        <% }else{ %>
          <h2 class="text-2xl tracking-wide">No users found</h2>
        <% } %>
      </div>
    </div>
  </body>
</html>
